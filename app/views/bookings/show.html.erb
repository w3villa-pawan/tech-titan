<!-- app/views/bookings/show.html.erb -->
<h1>Booking Details</h1>

<p>
  <strong>ID:</strong>
  <%= @booking.id %>
</p>

<p>
  <strong>User:</strong>
  <%= @booking.user.email %>
</p>

<p>
  <strong>Hotel:</strong>
  <%= @booking.hotel.name %>
</p>

<p>
  <strong>Check In:</strong>
  <%= @booking.check_in %>
</p>

<p>
  <strong>Check Out:</strong>
  <%= @booking.check_out %>
</p>

<p>
  <strong>Price:</strong>
  <%= number_to_currency(@booking.price) %>
</p>

<p>
  <strong>Status:</strong>
  <%= @booking.status %>
</p>

