<div class="auth-page">
    <div class="card card0 border-0">
        <div class="row d-flex">
            <div class="col-lg-6">
              <div class="card1 pb-5">
                <div class="row">
                    <a class="navbar-brand main-logo logo" href="/">
                      
                    </a>
                </div>
                <div class="row px-3 justify-content-center mt-4 mb-5 border-line">
                    <img src="<%= asset_path 'logo.png' %>">
                </div>
            </div>
            </div>
            <div class="col-lg-6">
                <div class="card2 card border-0 px-4 py-5">
                  <%- if devise_mapping.omniauthable? %>
                    <h6 class="mb-0 mr-4 mt-2 mb-2">Sign up with</h6>
                    <div class="row mb-4 px-3">
                      <%- resource_class.omniauth_providers.each do |provider| %>
                        <%= button_to "/users/auth/#{provider}", data: { turbo: false }, class: "#{provider.downcase} google  text-center mr-3" do %>
                            <div class="fa fa-google fa-#{provider.downcase}"></div>
                        <% end %>
                      <% end %>
                    </div>
                  <% end %>
                  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                    <div class="row px-3 mb-4">
                        <div class="line"></div>
                        <small class="or text-center">Or</small>
                        <div class="line"></div>
                    </div>
                    <div class="row mb-3 px-3">
                        <div class="field">
                        </div>
                        <div class="row px-3">
                          <%= f.label :email, class: "mb-1" do %>
                            <h6 class="mb-0 text-sm">Email Address</h6>
                          <% end %>
                          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Enter a valid email address" %>
                        </div>

                        <div class="row px-3">
                          <%= f.label :password, class: "mb-1" do %>
                            <h6 class="mb-0 text-sm">Password <% if @minimum_password_length %>
                              <em>(<%= @minimum_password_length %> characters minimum)</em>
                            <% end %></h6>
                           <% end %>
                          <%= f.password_field :password, autocomplete: "new-password", placeholder: "Enter password" %>
                        </div>
                        <div class="row px-3">
                          <%= f.label :password, class: "mb-1" do %>
                            <h6 class="mb-0 text-sm">Confirm Password</h6>
                          <% end %>
                          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm password" %>
                        </div>
                        <div class="row mb-3 px-3">
                          <%= f.submit "Sign up", class: "btn btn-blue text-center" %>
                      </div>
                    </div>
                  <% end %>


                    <div class="row mb-4 px-3">
                      <%- if devise_mapping.registerable? && controller_name != 'session' %>
                        <small class="font-weight-bold">Already have an account? <%= link_to "Log in", new_session_path(resource_name), class:"text-danger" %></small>
                      <% end %>
                    </div>
                </div>
            </div>
        </div>
        <%= render "users/shared/footer" %>
    </div>
</div>